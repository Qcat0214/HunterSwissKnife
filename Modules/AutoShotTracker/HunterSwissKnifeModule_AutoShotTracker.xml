<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Script file="HunterSwissKnifeModule_AutoShotTracker.lua"/>

    <Frame name="HunterSwissKnifeModule_AutoShotTracker"
           inherits="UIParent"
           frameStrata="HIGH"
           alpha="0">

        <Layers>
            <Layer level="OVERLAY">
                <Texture name="$parentBar"
                         file="Interface\AddOns\HunterSwissKnife\Modules\AutoShotTracker\Textures\Bar.tga">
                    <Anchors>
                        <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture name="$parentBackground">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
                        <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT"/>
                    </Anchors>

                    <Color r="0.15" g="0.15" b="0.15" a="1"/>
                </Texture>
            </Layer>

            <Layer level="BORDER">
                <Texture name="$parentBorderIn">
                    <Anchors>
                        <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
                    </Anchors>

                    <Color r="0" g="0" b="0" a="1"/>
                </Texture>
            </Layer>

            <Layer level="BACKGROUND">
                <Texture name="$parentBorderOut">
                    <Anchors>
                        <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER"/>
                    </Anchors>

                    <Color r="1" g="1" b="1" a="1"/>
                </Texture>
            </Layer>
        </Layers>

        <Scripts>
            <OnLoad>CreateBar();</OnLoad>
        </Scripts>
    </Frame>
</Ui>